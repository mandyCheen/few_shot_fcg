{
    "dataset": {
        "pack_filter": "diec",
        "cpu_arch": "x86_64",
        "reverse_tool": "ghidra",
        "raw": "malware_diec_ghidra_x86_64_fcg_dataset.csv",
        "split_by_cpu": false,
        "addition_note": "others",
        "openset": true,
        "openset_raw": "malware_diec_ghidra_x86_64_fcg_openset_dataset_rm0node.csv",
        "openset_data_mode": "random",
        "openset_data_ratio": 0.2,
        "pretrain_family": [
            "gafgyt",
            "ngioweb",
            "mirai",
            "tsunami"
        ]
    },
    "pretrain": {
        "name": "x86_pretrained",
        "use": true,
        "raw_dataset": "malware_diec_ghidra_x86_64_fcg_pretrain_dataset.csv",
        "batch_size": 128
    },
    "settings": {
        "name": "10way_10shot_MAML_gcn",
        "model": {
            "model_name": "GCN",
            "input_size": 128,
            "hidden_size": 128,
            "output_size": 128,
            "num_layers": 3,
            "projection": false,
            "load_weights": "",
            "pretrained_model_folder": ""
        },
        "train": {
            "training": true,
            "validation": true,
            "num_epochs": 200,
            "device": "cuda:0",
            "parallel": false,
            "parallel_device": [],
            "iterations": 100,
            "lr": 0.001,
            "projection_lr": 0.001,
            "lr_scheduler": {
                "use": true,
                "method": "ReduceLROnPlateau",
                "step_size": 20,
                "gamma": 0.5,
                "patience": 10,
                "factor": 0.5,
                "min_lr": 0.0001,
                "cooldown": 0
            },
            "early_stopping": {
                "use": true,
                "patience": 20
            },
            "loss": "CrossEntropyLoss",
            "distance": "euclidean",
            "optimizer": "Adam",
            "save_model": true
        },
        "few_shot": {
            "method": "MAML",
            "train": {
                "use": true,
                "support_shots": 10,
                "query_shots": 10,
                "class_per_iter": 10
            },
            "test": {
                "support_shots": 10,
                "query_shots": 10,
                "class_per_iter": 10
            }
        },
        "openset": {
            "train": {
                "use": false
            },
            "test": {
                "use": true,
                "m_samples": 50,
                "class_per_iter": 5
            }
        },
        "vectorize": {
            "node_embedding_method": "word2vec",
            "node_embedding_size": 128,
            "num_workers": 4
        },
        "seed": 888
    },
    "paths": {
        "data": {
            "fcg_dataset": "/mnt/ssd2t/mandy/Projects/few_shot_fcg/dataset/data_ghidra_fcg",
            "csv_folder": "./dataset/raw_csv",
            "split_folder": "./dataset/split",
            "embedding_folder": "/mnt/ssd2t/mandy/Projects/few_shot_fcg/embeddings",
            "pretrain_dataset": "/mnt/ssd2t/mandy/Projects/few_shot_fcg/dataset/data_ghidra_fcg_pretrain",
            "openset_dataset": "/mnt/ssd2t/mandy/Projects/few_shot_fcg/dataset/data_ghidra_fcg_openset"
        },
        "model": {
            "model_folder": "./checkpoints",
            "pretrained_folder": "./pretrained"
        }
    }
}