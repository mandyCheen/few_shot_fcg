{
    "dataset": {
        "pack_filter": "diec",
        "cpu_arch": "x86_64",
        "reverse_tool": "ghidra",
        "raw": "malware_diec_ghidra_x86_64_fcg_dataset.csv",
        "split_by_cpu": false,
        "addition_note": "openset",
        "openset": true,
        "openset_raw": "malware_diec_ghidra_x86_64_fcg_openset_dataset_rm0node.csv",
        "openset_data_mode": "random",
        "openset_data_ratio": 0.2,
        "pretrain_family": [
            "gafgyt",
            "ngioweb",
            "mirai",
            "tsunami"
        ]
    },
    "pretrain": {
        "name": "x86_pretrained",
        "use": true,
        "raw_dataset": "malware_diec_ghidra_x86_64_fcg_pretrain_dataset.csv",
        "batch_size": 128
    },
    "settings": {
        "name": "5way_5shot_LabelPropagation_alpha0.7_k20_gcn_lambda1.0_proc4",
        "model": {
            "model_name": "GCN",
            "input_size": 128,
            "hidden_size": 256,
            "output_size": 128,
            "num_layers": 3,
            "projection": false,
            "load_weights": "",
            "pretrained_model_folder": ""
        },
        "train": {
            "training": true,
            "validation": true,
            "num_epochs": 200,
            "device": "cuda:4",
            "parallel": false,
            "parallel_device": [],
            "iterations": 100,
            "lr": 0.001,
            "projection_lr": 0.001,
            "lr_scheduler": {
                "use": true,
                "method": "ReduceLROnPlateau",
                "step_size": 20,
                "gamma": 0.5,
                "patience": 10,
                "factor": 0.5,
                "min_lr": 0.0001,
                "cooldown": 0
            },
            "early_stopping": {
                "use": true,
                "patience": 20
            },
            "loss": "CrossEntropyLoss",
            "distance": "euclidean",
            "optimizer": "Adam",
            "save_model": true
        },
        "few_shot": {
            "method": "LabelPropagation",
            "train": {
                "support_shots": 5,
                "query_shots": 15,
                "class_per_iter": 5
            },
            "test": {
                "support_shots": 5,
                "query_shots": 15,
                "class_per_iter": 5
            },
            "parameters": {
                "relation_layer": 2,
                "dim_in": 128,
                "dim_hidden": 64,
                "dim_out": 32,
                "rn": 300,
                "alpha": 0.7,
                "k": 20
            }
        },
        "openset": {
            "train": {
                "use": true,
                "m_samples": 20,
                "class_per_iter": 5,
                "loss_weight": 1.0
            },
            "test": {
                "use": true,
                "m_samples": 50,
                "class_per_iter": 5
            }
        },
        "vectorize": {
            "node_embedding_method": "word2vec",
            "node_embedding_size": 128,
            "num_workers": 4
        },
        "seed": 10
    },
    "paths": {
        "data": {
            "fcg_dataset": "../dataset/data_ghidra_fcg",
            "csv_folder": "../dataset/raw_csv",
            "split_folder": "../dataset/split",
            "embedding_folder": "../embeddings",
            "pretrain_dataset": "../dataset/data_ghidra_fcg_pretrain",
            "openset_dataset": "../dataset/data_ghidra_fcg_openset"
        },
        "model": {
            "model_folder": "../checkpoints",
            "pretrained_folder": "../pretrained"
        }
    }
}